vcpkg_from_github(
    OUT_SOURCE_PATH SOURCE_PATH
    REPO stdware/qmsetup
    REF fce18d921f3be672a03ee293f6e383306b0edfba
    SHA512 6fd22cd00f1e560614787aff94484e2b717be5e5598794a2c4bb5bd55237701163aa5d7cc484acc40d967d3d921a5414283e8b07ea83b669e6e4e3b0edd687aa
